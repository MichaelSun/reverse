<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:focusable="true" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@id/chatting_time_tv" style="@style/ChattingUISplit" />
    <LinearLayout style="@style/ChattingUIContent">
        <ImageView android:id="@id/chatting_avatar_iv" android:focusable="false" android:visibility="gone" style="@style/ChattingUIAvatarFrom" />
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@id/chatting_user_tv" android:visibility="visible" style="@style/ChattingUISenderText" />
            <FrameLayout android:orientation="vertical" android:id="@id/chatting_click_area" android:background="@drawable/chatfrom_bg" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:id="@id/chatting_content_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <ProgressBar android:layout_gravity="center" android:id="@id/downloading_pb" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" style="?android:attr/progressBarStyleSmall" />
            </FrameLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <View android:layout_width="0.0dip" android:layout_height="0.0dip" android:layout_weight="1.0" />
                <TextView android:id="@id/chatting_appmsg_comment_tv" android:background="@drawable/app_msg_item_source_from" android:text="@string/chatting_comment" style="@style/ChattingItemSourceTextView" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>